<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clothes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <!-- Créer le composant titre par défaut -->
    <style name="DefaultTextStyle">
    <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
       <!-- <item name="android:fontFamily">@font/Kanit-ThinItalic</item>-->
    </style>

    <!-- Créer le composant sous titre par défaut -->
    <style name="SubTitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Créer le composant titre par défaut -->
    <style name="TitleTextStyle" parent="SubTitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>
    <color name="darkGray">#272525</color>
    <color name="lightGray">#686565</color>

    <!--crrer un style pour le bottom navigation view-->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
    </style>

    <!--personnaliser la bare de navigation -->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
    </style>
</resources>