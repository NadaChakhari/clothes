<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9377B6"
    android:scaleX="1.01">

    <TextView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="97dp"
        android:contentDescription="@string/Bienvenue"
        android:text="Bienvenue"
        android:textColor="#13497B"
        android:textColorHint="#13497B"
        android:textSize="35sp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/imageView2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="116dp"
        android:contentDescription="@string/Username"
        android:text="Username"
        android:textColor="#13497B"
        android:textColorHint="#13497B"
        android:textSize="25sp"
        android:textStyle="bold"
     />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="351dp"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@+id/main_join_now_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#00BCD4"
        android:text="@string/login"
        android:textColor="#13497B"
        android:textColorLink="#13497B" />

    <TextView
        android:id="@+id/imageView7"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="73dp"
        android:contentDescription="@string/pass"
        android:text="Password"
        android:textColor="#13497B"
        android:textColorHint="#13497B"
        android:textSize="25sp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:labelFor="@id/login_password_input"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/inputname"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/inputname"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#99ffffff"
        android:onClick="valid"
        android:padding="20dp"
        android:text="@string/create_new_account"

        android:textAllCaps="false"
        android:textColor="#13497B"
        android:textSize="18sp" />


</RelativeLayout>